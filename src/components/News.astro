<!-- HTML for the text input field -->

<h1 id="heading"></h1>
<main></main>

<style>
  input {
    padding: 10px;
    min-width: 250px;
    border-radius: 5px;
    border: 2px solid #9a9898;
  }

  h2 {
    font-size: clamp(1rem, 1.2rem, 3rem);
  }
  span {
    font-style: italic;
    color: #909090;
  }
  a {
    position: absolute;
    bottom: 28px;
    color: var(--primary);
    text-decoration: none;
    display: block;
    margin-top: 10px;
  }
  a:hover {
    text-decoration: underline;
  }
  main {
    max-width: 1100px;
    margin: auto;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 21px;
  }
  button {
    border: none;
    padding: 12px;
    background-color: var(--primary);
    border-radius: 10px;
    color: #fff;
    min-width: 7rem;
  }
  button:hover {
    opacity: 0.8;
  }
  #heading {
    text-transform: capitalize;
  }

  .card {
    position: relative;
    border-radius: 10px;
    margin: 1rem 0;
    padding: 30px 30px 65px 30px;
    background-color: #fff;
  }

  .search-filter {
    padding: 1rem;
    text-align: center;
  }
</style>
