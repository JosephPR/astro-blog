---
const { image, title, desc, link } = Astro.props;

---
  
<div data-aos="fade-up"  class="card">
    <div class="card__image">
      <img src={image} alt={title} />
    </div>
    <div class="card__content">
      <h3 class="card__title">{title}</h3>
      <p class="card__description">{desc}</p>
      <a class="btn-outline card__button" href={link} target="_blank">View Project</a>
    </div>
    </div>

    <style>
        .card{
            position:relative;
            min-height: 27rem;
          
    
        }
     
        .card a{
            position:absolute;
            bottom:10px;

        }
        .card__content{
            padding: 0 1rem;
        }
    </style>