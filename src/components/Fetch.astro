---
   const bitcoinPrice = `https://api.coindesk.com/v1/bpi/currentprice.json`
   const jokes = 'https://api.chucknorris.io/jokes/random'
const bitcoinData = await fetch(bitcoinPrice);
const priceResults = await bitcoinData.json();
const price =  priceResults.bpi.USD.rate

const kanye = await fetch("https://api.kanye.rest")
const kanyeResults = await kanye.json()
const jokeData = await fetch(jokes)
const jokesResults = await jokeData.json()
const response = await fetch("https://dummyjson.com/products");
const results = await response.json();
// console.log(results)
---
<h2>Fetch API Calls in Astro Component</h2>

<h3>{jokesResults.value}</h3>
<h3>{kanyeResults.quote}</h3>

<h2>Bitcoin Price:  {price}</h2>
<div class="products">
    {results.products.map((product) => <div>
        <img width="300px" src={product.thumbnail}/> 
        <h3>{product.title}</h3>
        <p>{product.description}</p>
        <p> $ {product.price}</p>
        </div>)} 
</div>
    <style>
        .products{
            display:flex;
            flex-wrap: wrap;
            gap:1rem;

        }
        .products > div{
            max-width: 320px;
        }
    </style>