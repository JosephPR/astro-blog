---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "About Me";

const identity = {
  firstName: "Joseph",
  country: "USA",
  occupation: "Web Developer",
  hobbies: ["photography", "snowboarding", "chess"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Hubspot"];

const skillColor = "#4036c7";
const fontWeight = "bold"
const textTransform = "uppercase"
---

<BaseLayout pageTitle={pageTitle}>

<section id="about-me">
  <img  data-aos="fade-right" src="/profile-pic.png" alt="Joseph's profile picture" />

  <div  data-aos="fade-left" class="about-me-content">
    <h2>About Me</h2>
    <p>   A passionate web developer with 6+ years of experience building a range of web applications, from small single-page apps to large-scale enterprise solutions.  Proficient in HTML, CSS, and Javascript. 
       I specialize in creating high-quality, responsive HubSpot websites known for their fast performance and pixel-perfect design. 
        I'm committed to staying current with industry trends and delivering cutting-edge solutions.

  </p>
  </div>
</section>
<style>
  #about-me {
    display: flex;
    flex-wrap:wrap;
   align-items: center;


  }

  #about-me img {
    border-radius: 50%;
    width: 300px;
    height: 300px;
    object-fit: cover;
    margin: 2rem;
    
  }
  .about-me-content {
    margin: 2rem;
    flex: 1 1 50%;
  }
  


</style>
